{
  "name": "castai-mcp-bridge",
  "version": "1.0.0",
  "description": "CAST AI MCP Bridge for ChatGPT Actions",
  "author": "Swisscom",
  "repository": {
    "type": "git",
    "url": "https://github.com/swisscom20052022/castai-mcp-bridge.git"
  },
  "deployment": {
    "docker": {
      "enabled": true,
      "dockerfile": "Dockerfile",
      "port": 3000
    },
    "healthcheck": {
      "enabled": true,
      "path": "/health",
      "interval": 30,
      "timeout": 10,
      "retries": 3
    },
    "environment": {
      "required": [
        "CASTAI_API_KEY",
        "CASTAI_API_BASE"
      ],
      "optional": [
        "PORT",
        "NODE_ENV"
      ]
    }
  }
}
